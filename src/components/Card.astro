---
interface Props {
  title: string;
  body: string;
  href: string;
  image: any;
  description: string;
}
import { Image } from "astro:assets";

const { href, title, body, image, description } = Astro.props;
---

<a href={href} class="card">
  <Image
    class="card-image"
    src={image}
    alt={title}
    title={title}
    width={1024}
    height={1024}
  />

  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
  </div>
</a>

<style>
  .card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 1px dotted #dadada;
    border-radius: 4px;
    padding: 10px;
    margin: 10px;
    height: 400px;
  }

  .card-image {
    width: 100%;
    height: 70%;
    border-radius: 5px;
  }

  .card-title {
    margin: 0;
    padding: 0;
    font-size: 20px;
  }

  .card-description {
    font-size: 16px;
  }
</style>
